---
import { CurrentStackList, AllTechList } from '../../util/imageMap'
---

<div class="mb-5 min-h-screen grid place-content-center">
    <h2
        class="text-4xl lg:text-6xl text-center w-fit shadow-md rounded-3xl mx-auto mb-5 py-2 px-8 bg-neutral-50"
    >
        Tech
    </h2>

    <div
        class="bg-neutral-50 shadow-lg rounded-xl p-4 w-11/12 lg:w-1/2 mx-auto"
    >
        <div class="text-center my-4">
            <span class="text-2xl"
                ><strong>Hover</strong> or <strong>Click</strong> icons to see their
                names or Google search</span
            >
        </div>
        <div class="text-center mb-3 lg:mb-8">
            <span class="font-PopBold text-2xl">Current Stack</span><br />

            <ul
                class="[&>li]:text-lg w-full flex flex-wrap justify-center items-center mx-auto"
            >
                <CurrentStackList />
            </ul>
        </div>
        <div class="text-center">
            <span class="font-PopBold text-2xl">Tech I've used</span>
            <ul
                class="[&>li]:text-lg w-full lg:w-11/12 flex flex-wrap justify-center items-center mx-auto"
            >
                <AllTechList />
            </ul>
        </div>
    </div>
</div>
